{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}